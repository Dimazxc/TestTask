<Window x:Class="XmlParserTestTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XmlParserTestTask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel>
        <Button x:Name="RegexParseXml" Height="30" Width="160"  
            Content="Parse XMl with Regex"  
            Margin="10,10,0,0" VerticalAlignment="Top"  
            HorizontalAlignment="Left" Click="RegexParseXml_Click">
        </Button>

        <Button x:Name="DataModelParseXml" Height="30" Width="160"  
            Content="Parse XMl with data model"  
            Margin="10,10,0,0" VerticalAlignment="Top"  
            HorizontalAlignment="Left" Click="DataModelParseXml_Click">
        </Button>

        <Button x:Name="WriteToTxtButton" Height="30" Width="160"  
            Content="WriteDataToTxt"  
            Margin="10,10,0,0" VerticalAlignment="Top"  
            HorizontalAlignment="Left" Click="WriteToTxtButton_Click">
        </Button>
    </StackPanel>

</Window>
